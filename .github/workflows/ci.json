{
  "name": "Formly Monorepo",
  "on": ["push"],
  "jobs": {
    "lint": {
      "runs-on": "ubuntu-latest",
      "steps": [
        {"uses": "actions/checkout@v4"},
        {"name": "Setup Node", "uses": "actions/setup-node@v4", "with": {"node-version": "20"}},
        {"name": "Frontend lint", "run": "cd frontend && npm ci && npm run lint"}
      ]
    }
  }
}
